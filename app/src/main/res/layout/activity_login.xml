<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".LoginActivity"
    android:windowSoftInputMode="adjustNothing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="พี่ม.ติวเตอร์ สตูล"
            app:autoSizeTextType="uniform"
            android:fontFamily="@font/anchan_family"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="72sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_weight="40"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/thsaraban_family"
            android:elevation="10dp"
            android:maxLines="1"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@color/colorWhite"
            app:hintAnimationEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/userid_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_userid"
                android:textSize="30sp"
                android:fontFamily="@font/thsaraban_family"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:fontFamily="@font/thsaraban_family"
            android:maxLines="1"
            android:layout_margin="10dp"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@android:color/white"
            app:hintAnimationEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/pwd_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_pwd"
                android:textSize="30sp"

                android:inputType="text"
                android:fontFamily="@font/thsaraban_family"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thsaraban_family"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4974EB"
            android:elevation="10dp"
            android:shadowRadius="5"
            android:stateListAnimator="@null"
            android:text="เข้าสู่ระบบ"
            android:textColor="@color/colorWhite"
            android:textSize="27sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/logout"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thsaraban_family"
            android:backgroundTint="#FFC700"
            android:elevation="10dp"
            android:shadowRadius="5"
            android:stateListAnimator="@null"
            android:text="ออกจากระบบ"
            android:textColor="@color/colorWhite"
            android:textSize="27sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>