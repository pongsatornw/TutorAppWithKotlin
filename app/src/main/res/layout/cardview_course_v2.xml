<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" app:cardBackgroundColor="@color/colorSky" app:cardCornerRadius="20dp">
    <LinearLayout android:orientation="vertical" android:background="@drawable/cardview_background" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp">
        <LinearLayout android:orientation="horizontal" android:id="@+id/course_name_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:weightSum="100" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <TextView android:textSize="21sp" android:id="@+id/course_name_txt" android:layout_width="0dp" android:layout_height="match_parent" android:text="ชื่อรายวิชา" android:layout_weight="35"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="10"/>
            <TextView android:textSize="21sp" android:id="@+id/course_name" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="55"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/course_cat_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:weightSum="100" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <TextView android:textSize="21sp" android:id="@+id/couse_cat_txt" android:layout_width="0dp" android:layout_height="match_parent" android:text="หมวดหมู่" android:layout_weight="35"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="10"/>
            <TextView android:textSize="21sp" android:id="@+id/course_cat" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="55"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ins_name_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="5dp" android:weightSum="100" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <TextView android:textSize="21sp" android:id="@+id/ins_name_txt" android:layout_width="0dp" android:layout_height="match_parent" android:text="อาจารย์ผู้สอน" android:layout_weight="35"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="10"/>
            <TextView android:textSize="21sp" android:id="@+id/ins_name" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="55"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/course_period_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="5dp" android:weightSum="100" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <TextView android:textSize="21sp" android:id="@+id/txt_asd" android:layout_width="0dp" android:layout_height="match_parent" android:text="ช่วงการสอน" android:layout_weight="35"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="10"/>
            <TextView android:textSize="21sp" android:id="@+id/period" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="55"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/course_dInWeek" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="5dp" android:weightSum="100" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <TextView android:textSize="21sp" android:layout_width="0dp" android:layout_height="match_parent" android:text="วันที่ทำการสอน" android:layout_weight="35"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="10"/>
            <TextView android:textSize="21sp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="55"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/course_dateInWeek" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:weightSum="100" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <TextView android:id="@+id/sun_txt" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Sun" android:layout_weight="12" android:textAlignment="center"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
            <TextView android:id="@+id/mon_txt" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Mon" android:layout_weight="12" android:textAlignment="center"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
            <TextView android:id="@+id/tue_txt" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Tue" android:layout_weight="12" android:textAlignment="center"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
            <TextView android:id="@+id/wed_txt" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Wed" android:layout_weight="12" android:textAlignment="center"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
            <TextView android:id="@+id/thr_txt" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Thr" android:layout_weight="12" android:textAlignment="center"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
            <TextView android:id="@+id/fri_txt" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Fri" android:layout_weight="12" android:textAlignment="center"/>
            <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
            <TextView android:id="@+id/sat_txt" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Sat" android:layout_weight="12" android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
